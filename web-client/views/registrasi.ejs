<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="./fontawesome/css/all.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Registrasi</title>
  </head>
  <body>
    <style type="text/css">
    .fa-circle-chevron-left{
      position: fixed;
    }

    .banner{
      position: fixed;
    }

    .ikon{
      position: relative;
      padding-top: 60px;
    }

    i{
      color: #64B5F6;
      font-size: 19px;
    }
    
    .fa-circle-chevron-left{
      font-size: 35px; 
      color: black; 
      display:inline-block; 
      margin-top: 21px; 
      margin-left: 10px; 
      padding: 0 15px !important;
    }

    .box{
      margin-bottom: 20px;
      box-shadow: 0px 17px 19px rgba(0, 0, 0, 0.11), 0px 2.12866px 2.37909px rgba(0, 0, 0, 0.055);
      border-radius: 15px;
      width: 308px;
      height: 54px;
    }

    .box input{
      color: #000000;
      background: none;
      border: none;
      outline: none;
      font-size: 15px;
      padding-top: 20px;
      padding-right: 60px;
      margin-left: 20px;
    }

    .box input::placeholder{
      font-style: normal;
      font-size: 15px;
      color: #000000;
    }

    button{
      padding-top: 30px;
      width: 230px;
      padding-top: 8px;
      padding-bottom: 8px;
      background: #64B5F6;
      border-radius: 30px;
      border-color: #64B5F6;
      color: white;
      margin-top: 25px;
      font-size: 19px;
    }

    button:hover{
      background: #1976D2;
      color: white;
    }

    </style>
    <div class="banner">
      <img src="./assets/banner.jpeg" style="height: 150px; width: 430%;">
    </div>
   
    <div class="container">
      <a href="welcome"><i class="fa-solid fa-circle-chevron-left" style="z-index: 999;"></i></a>
      <center>
        <div class="ikon">
          <img src="./assets/register.png" style="height: 120px; align-items: center;">
        </div>
      </center>
      <form action="registrasi" method="post">
        <center>
            <div class="kosong"></div>
            <div class="content">
                <div class="box">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" name="nama_pengguna" placeholder="Username">
                  </div>
                  <div class="box">
                    <i class="fa-solid fa-address-card"></i>
                    <input type="text" name="username_pengguna" placeholder="Nama">
                  </div>
                  <div class="box">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="text" name="email_pengguna" placeholder="Email">
                  </div>
                  <div class="box">
                    <i class="fa-solid fa-id-card"></i>
                    <input type="text" name="nippos" placeholder="Nippos">
                  </div>
                  <div class="box">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" name="password_pengguna" placeholder="Password">
                  </div>
                </div>
                <button type="submit">Sign Up</button>
              </center>
            </form>
          
      
    </div>
    

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
