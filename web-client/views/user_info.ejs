<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/fontawesome/css/all.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Registrasi</title>
</head>

<body>
  <style type="text/css">
    .fa-circle-chevron-left {
      position: fixed;
    }

    .banner {
      position: fixed;
    }

    .ikon {
      position: relative;
      padding-top: 40px;
      padding-bottom: 60px;
    }

    .ikon img {
      height: 100px;
      width: 100px;
      border: 0.813559px solid #000000;
      align-items: center;
      border-radius: 50%;
    }

    h3 {
      margin-top: 15px;
      font-style: normal;
      font-weight: 700;
      font-size: 16px;
      line-height: 19px;
      color: white;
    }

    h4 {
      font-style: normal;
      font-weight: 400;
      font-size: 13px;
      line-height: 16px;
      margin-top: -5px;
      color: #FFFFFF;

    }

    h1{
      font-weight: bold;
      color: #433C39;
      padding-bottom: 10px;
    }

    .gambar {
      width: 35px;
      height: 35px;
      margin-top: -12px;
      margin-left: 10px;
    }

    .fa-circle-chevron-left {
      font-size: 35px;
      color: black;
      display: inline-block;
      margin-top: 21px;
      margin-left: 10px;
      padding: 0 15px !important;
    }

    .box{
      padding-bottom: 30px;
    }

    .box-profile {
      padding-bottom: 28px;
      border-bottom: 1px solid #7D7D7D;
      width: 100%;
      height: 0px;
    }

    .box-profile p {
      margin-left: 20px;
      font-size: 16px;
    }

    label {
      color: #433C39;
      margin-left: 63px;
      font-weight: bold;
    }

    button {
      width: 230px;
      padding-top: 8px;
      padding-bottom: 8px;
      background: #64B5F6;
      border-radius: 30px;
      border-color: #64B5F6;
      color: white;
      margin-top: 5px;
      font-size: 19px;
    }

    button:hover {
      background: #1976D2;
      color: white;
    }
  </style>
  <div class="banner">
    <img src="/assets/banner2.jpeg" style="height: 240px; width: 430%;">
  </div>

  <div class="container">
    <a href="/home" style="z-index: 999;"><i class="fa-solid fa-circle-chevron-left" style="z-index: 999;"></i></a>
    <center>
      <div class="ikon">
        <img src="<%= foto_pengguna %>">
        <h3><%= username_pengguna %></h3>
        <h4><%= nippos %></h4>
      </div>
    </center>
    <h1>Informasi Akun</h1>
    <div class="content">
      <div class="box">
        <label class="form-label">Nama</label>
        <div class="box-profile d-flex">
          <img src="/assets/user.png" class="gambar">
          <p><%= nama_pengguna %></p>
        </div>
      </div>
      <div class="box">
        <label class="form-label">Email</label>
        <div class="box-profile d-flex">
          <img src="/assets/gmail.png" class="gambar">
          <p><%= email_pengguna %></p>
        </div>
      </div>
      <div class="box">
        <label class="form-label">Nippos</label>
        <div class="box-profile d-flex">
          <img src="/assets/nippos.png" class="gambar">
          <p><%= nippos %></p>
        </div>
      </div>
    </div>
    <center>
      <a href="/edit_profile"><button>Edit Profile</button></a>
    </center>

  </div>


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
  </script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    -->
</body>

</html>