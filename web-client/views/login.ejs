<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="./fontawesome/css/all.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Login</title>
</head>

<body>
  <style type="text/css">
    h3 {
      font-weight: bold;
      font-size: 28px;
      margin-left: 20%;
    }

    .login h2 {
      font-family: 'Nunito';
      font-style: normal;
      font-weight: 700;
      font-size: 16px;
      line-height: 22px;
      text-align: center;
      color: black;
      padding-top: 5px;
    }

    .box-login {
      display: flex;
      padding-bottom: 20px;
      padding-top: 35px;
      border-bottom: 1px solid #64B5F6;
      width: 212px;
      height: 0px;
    }

    i {
      color: #64B5F6;
      font-size: 17px;
      padding-right: 8px;
    }

    .box-login input {
      width: 120%;
      height: 17px;
      background: none;
      border: none;
      outline: none;
      font-size: 15px;
      padding-bottom: 5px;
    }

    .box-login input::placeholder {
      font-style: normal;
      font-size: 15px;
    }

    .btn-login {
      width: 230px;
      padding-top: 8px;
      padding-bottom: 8px;
      background: #64B5F6;
      border-radius: 30px;
      color: white;
      margin-top: 25px;
      font-size: 15px;
    }

    .btn-login:hover {
      background: #1976D2;
      color: white;
    }

    .btn {

      margin-top: 35px;
    }
  </style>

  <div class="container">
    <div class="tittle d-flex">
      <a href="welcome"
        style="display:inline-block; margin-top: 21px; margin-left: 10px; padding: 0 15px !important;"><i
          class="fa-solid fa-circle-chevron-left" style="font-size: 35px; color: black;"></i></a>
      <h3 style="margin-top:20px;">Login</h3>
    </div>
    <center>
      <img src="./assets/login.svg" style="width: 320px; height: 330px; padding-top: 30px;">
      <form action="login" method="post">
        <div class="box-login">
          <i class="fa-solid fa-user"></i>
          <input type="text" placeholder="Username" name="username_pengguna">
        </div>
        <div class="box-login pw">
          <i class="fas fa-lock"></i>
          <input type="Password" placeholder="Password" name="password_pengguna">
        </div>
        <div>
          <button type="submit" class="btn btn-login">Login</button>
        </div>
    </center>
    </form>

  </div>

  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
  </script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
