<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="./fontawesome/css/all.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>home</title>
</head>

<body>
  <style type="text/css">
    body {
      position: relative;
    }

    a {
      text-decoration: none;
    }

    .profile {
      margin-top: 10px;
    }

    h1 {
      /* font-family: Inter; */
      font-weight: 40px;

    }

    .foto img {
      width: 40px;
      height: 40px;
      border: 0.813559px solid #000000;
      border-radius: 50%;

    }

    .welcome {
      font-style: normal;
      font-weight: 700;
      font-size: 35px;
      line-height: 50px;
      padding-top: 20px;
      color: #433C39;
    }

    .icon img {
      width: 40px;
      height: 40px;
    }

    .info-icon {
      color: #433C39;
      font-weight: bold;
    }

    h2 {
      font-weight: bold;
      font-size: 28px;
      color: #443636;
    }

    .box {
      box-shadow: 0px 17px 19px rgba(0, 0, 0, 0.11), 0px 2.12866px 2.37909px rgba(0, 0, 0, 0.055);
      border-radius: 10px;
      font-size: 12px;
      margin-bottom: 25px;
    }

    .box:hover {
      background-color: #ececec;
    }

    .card {
      box-shadow: 0px 17px 19px rgba(0, 0, 0, 0.11), 0px 2.12866px 2.37909px rgba(0, 0, 0, 0.055);
      border-radius: 15px;
    }

    .card:hover {
      background-color: #ececec;
    }
  </style>

  <div class="container">
    <div class="profile d-flex justify-content-between">
      <h1>Hi Nadaulia</h1>
      <div class="foto">
        <a href="./user_info"><img src="./assets/profile.jpg"></a>
      </div>
    </div>
    <div class="welcome">
      <p>Selamat datang di
        SIMA Mobile</p>
    </div>
    <div class="menu row">
      <div class="col-3">
        <a href="./tag_lokasi">
          <div class="box d-flex flex-column justify-content-center align-items-center">
            <div class="icon mt-3">
              <img src="./assets/map.png" alt="">
            </div>
            <div>
              <p class="info-icon">Tag Lokasi</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-3">
        <a href="./tambah_foto">
          <div class="box d-flex flex-column justify-content-center align-items-center">
            <div class="icon mt-3">
              <img src="./assets/camera.png" alt="">
            </div>
            <div>
              <p class="info-icon">Foto</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-3">
        <a href="./halaman_informasi">
          <div class="box d-flex flex-column justify-content-center align-items-center">
            <div class="icon mt-3">
              <img src="./assets/information.png" alt="">
            </div>
            <div>
              <p class="info-icon">Informasi</p>
            </div>
          </div>
        </a>
      </div>
      <div class="col-3">
        <a href="./welcome">
          <div class="box d-flex flex-column justify-content-center align-items-center">
            <div class="icon mt-3">
              <img src="./assets/logout.png" alt="">
            </div>
            <div>
              <p class="info-icon">Keluar</p>
            </div>
          </div>
        </a>
      </div>
      <div class="content !important">
        <h2>Halaman Informasi</h2>
        <% datas.forEach((data) => { %>
          <div class="card my-3">
              <div class="row g-0">
                <div class="col-4">
                  <img src="<%= data.gambar %>" class="img-fluid" style="padding-top: 10%;" alt="...">
                </div>
                <div class="col-8">
                  <div class="card-body">
                    <a href="detail/<%=data.id_tempat%>" style="color: #64B5F6;">
                      <h5 class="card-title"><%=data.nama_tempat%></h5>
                    </a>
                    <p class="card-text"><small class="text-muted"><%=data.koordinat%></small></p>
                  </div>
                </div>
              </div>
            </div>
      <% }) %>
      </div>
    </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    -->
</body>

</html>